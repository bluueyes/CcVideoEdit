QPushButton:hover {
    background: qlineargradient(
        x1:0, y1:0, x2:0, y2:1,  /* 垂直渐变方向 */
        stop:0 #505050, stop:0.4 #a0a0a0, stop:0.6 #a0a0a0, stop:1 #505050
    );
    color: white;                /* 文字颜色 */
}

/* 按下状态：从上到下，灰色到深灰色的渐变色 */
QPushButton:pressed {
    background: qlineargradient(
